{
     "manifest_version": 2,
     "name": "Cheesify 1.0",
     "description": "Chrome extension workshop for Le Wagon Lisbon",
     "author": "Rita Peixoto",
     "version": "1.0.0",
     "permissions": ["tabs"], 
     "icons": {
       "16": "images/icon16.png",
       "32": "images/icon32.png",
       "48": "images/icon48.png",
       "128": "images/icon128.png"
     },
     "content_scripts": [
       {
         "matches": [
           "<all_urls>"
          ],
          "js": ["scripts/cheesify.js"]
       }
     ],
     "browser_action": {
      "default_popup": "popup.html",
      "default_title": "Cheesify my page!"
    }
}